# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{hpp,cpp,rvmat,bat,ps1,sh,toml}]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,md}]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{CODEOWNERS,.editorconfig,.gitattributes,.gitignore}]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[$PREFIX$]
insert_final_newline = false
